extends layout

block content
  form
    fieldset 
      legend 종목코드 확인
      div(class="bs-docs-section")
        div(class="row")
          div(class="col-sm-3")
            div(class="form-group row")
              label(for="" class="form-label mt-4") 종목코드
              div(class="form-group")
                div(class="input-group mb-3")
                  input(type="text" class="form-control" id="isuSrtCd" name="isuSrtCd" placeholder="종목코드를 입력해주세요")
                  button(type="button" class="btn btn-primary" onclick="get_categorys()") 검색
                div(id="check_isuSrtCd" class="input-group mb-3")
      div(class="bs-docs-section")
        div(class="row")
          div(class="col-lg-10")
            div(class="form-group row")
              div(class="mb-3")
                label(for="" class="form-label mt-4") 카테고리 목록
                input(type="button" id="category_btn" class="btn btn-primary ml-4 d-none" value="" onclick="insert_categorys()")
              div(class="input-group mb-3")
                textarea(id="result_categorys_textarea" class="form-control" name="", cols="30", rows="10",
                       readonly="readonly", placeholder="카테고리를 입력해주세요\n항목은 쉼표(,)로 구분해주세요")

